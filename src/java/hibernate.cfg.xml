<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/saleslandcolombiadb</property>
    <property name="hibernate.connection.username">root</property>
    <mapping class="Modelo.Area"/>
    <mapping class="Modelo.Canal"/>
    <mapping class="Modelo.Cargo"/>
    <mapping class="Modelo.Ingreso"/>
    <mapping class="Modelo.Permiso"/>
    <mapping class="Modelo.Publicacion"/>
    <mapping class="Modelo.Sector"/>
    <mapping class="Modelo.Usuario"/>
    <mapping class="Modelo.Sector_Cargo"/>
    <mapping class="Modelo.Canal_Cargo"/>
    <mapping class="Modelo.Area_Cargo"/>
  </session-factory>
</hibernate-configuration>
